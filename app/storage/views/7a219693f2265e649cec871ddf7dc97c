			<div class="control-group">
				<div class="controls">

					<?php foreach ($permissions as $area => $permissions): ?>
					<fieldset>
						<legend><?php echo $area; ?></legend>

						<?php foreach ($permissions as $permission): ?>
						<div class="control-group">
							<label class="control-group"><?php echo $permission['label']; ?></label>

							<div class="radio inline">
								<label for="<?php echo $permission['permission']; ?>_allow" onclick="">
									<input type="radio" value="1" id="<?php echo $permission['permission']; ?>_allow" name="permissions[<?php echo $permission['permission']; ?>]"<?php echo (array_get($selectedPermissions, $permission['permission']) === 1 ? ' checked="checked"' : ''); ?>>
									<?php echo Lang::get('backend/general.allow'); ?>
								</label>
							</div>

							<div class="radio inline">
								<label for="<?php echo $permission['permission']; ?>_deny" onclick="">
									<input type="radio" value="-1" id="<?php echo $permission['permission']; ?>_deny" name="permissions[<?php echo $permission['permission']; ?>]"<?php echo (array_get($selectedPermissions, $permission['permission']) === -1 ? ' checked="checked"' : ''); ?>>
									<?php echo Lang::get('backend/general.deny'); ?>
								</label>
							</div>

							<?php if ($permission['can_inherit']): ?>
							<div class="radio inline">
								<label for="<?php echo $permission['permission']; ?>_inherit" onclick="">
									<input type="radio" value="0" id="<?php echo $permission['permission']; ?>_inherit" name="permissions[<?php echo $permission['permission']; ?>]"<?php echo ( ! array_get($selectedPermissions, $permission['permission']) ? ' checked="checked"' : ''); ?>>
									<?php echo Lang::get('backend/general.inherit'); ?>
								</label>
							</div>
							<?php endif; ?>
						</div>
						<?php endforeach; ?>

					</fieldset>
					<?php endforeach; ?>

				</div>
			</div>
